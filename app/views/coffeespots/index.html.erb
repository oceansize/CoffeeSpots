<% if @coffeespots.any? %>
    <h2>CoffeeSpots</h2>
    <ul>
        <% @coffeespots.each do |coffeespot| %>
            <div>
                <p>CoffeeSpot Name: <%= link_to coffeespot.name, coffeespot_path(coffeespot.id) %></p>
                <p>Url: <%= link_to "#{coffeespot.url}", coffeespot.url %></p>
                <% if coffeespot.reviews.any? %>
                    <p>Reviews:</p>
                    <ul>
                        <% coffeespot.reviews.each do |review| %>
                            <li>
                                <%= link_to review.thoughts, coffeespot_review_path(coffeespot.id, review.id) %>
                                (<%= review.rating %>)  
                            </li>
                        <% end %>
                    </ul>
                <% else %>
                    <p>Reviews: No reviews yet</p>
                <% end %>
                <% if user_signed_in? %>
                    <p><%= link_to 'Add Review', new_coffeespot_review_path(coffeespot.id) %></p>
                <% end %>
            </div>
        <% end %>
    </ul>
<% else %>
    <p>No Coffee Spots yet</p>
<% end %>

<% if user_signed_in? %>
    <%= link_to 'Add CoffeeSpot', new_coffeespot_path %>
<% end %>


